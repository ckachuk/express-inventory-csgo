extends ../layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Role name:
      input#name.form-control(type='text', placeholder='Fantasy, Poetry etc.' name='name' value=(undefined===role ? '' : role.name))
    div.form-group
      label(for='brief_description') Description:
      input#name.form-control(type='text', placeholder='Fantasy, Poetry etc.' name='brief_description' value=(undefined===role ? '' : role.brief_description))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
